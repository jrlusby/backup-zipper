#! /usr/bin/env python3

import os
import zipfile

def main(argv):
    filess = os.listdir()
    zip(filess, "dst")

def zip(files, dst):
    zf = zipfile.ZipFile("%s.zip" % (dst), "w")
    # print(abs_src) 
    # print("%s.zip" % (dst))
    for filename in files:
        # print (os.path.abspath(filename))
        absname = os.path.abspath(filename)
        arcname = os.path.join(dst, filename)
        # print(absname)
        zf.write(absname, arcname)
    zf.close()

if __name__ == '__main__':
    sys.exit(main(sys.argv))

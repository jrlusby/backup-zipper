#! /usr/bin/env python3

import os
import zipfile

def zip(dst):
    files = os.listdir()
    zf = zipfile.ZipFile("%s.zip" % (dst), "w")
    # print(abs_src) 
    # print("%s.zip" % (dst))
    for filename in files:
        # print (os.path.abspath(filename))
        absname = os.path.abspath(filename)
        arcname = os.path.join(dst, filename)
        # print(absname)
        zf.write(absname, arcname)
    zf.close()

zip("dst")
